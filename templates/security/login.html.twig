{% extends 'base.html.twig' %}

{% block title %} {% endblock %}

{% block body %}

    <body>
    <!-- Start Page Banner Area -->
    <div class="page-banner-area bg-22 pt-100">
        <div style="padding-left: 280px" class="container">
                <div class="my-account-area ptb-100">
                    <div class="container">
                        <div class="page-banner-content">
                        <div class="row">
                            <div class="col-lg-12" style="width: 500px;margin-left: 50px" >
                                <form class="login-register-form-area login" method="post">



                                    <h2 style="margin-left: 140px">Login</h2>
                                    {% if app.user %}
                                        <div class="mb-3">
                                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                        </div>
                                    {% endif %}
                                    <input style="margin-bottom: 20px" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" >
                                    <input style="margin-bottom: 20px" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password">

                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    <div class="form-group">
                                        <div class="forgot d-flex justify-content-between align-items-center">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                                <label class="form-check-label" for="flexCheckDefault">
                                                    Remember me
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <a href="{{path('resetPassword')}}">Forgot password ?</a>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center">
                                        <button type="submit" class="default-btn me-3">
                                            Login
                                        </button>
                                        <p>Donâ€™t have an account? <br><a href="{{path('register')}}">Register now</a></p>
                                    </div>
                                </form>
                            </div>

                        </div>
                        </div>
                    </div>
                </div>


        </div>
    </div>
    <!-- End Page Banner Area -->
    <!-- Start Go Top Area -->
    <div class="go-top">
        <i class="ri-arrow-up-s-fill"></i>
        <i class="ri-arrow-up-s-fill"></i>
    </div>
    <!-- End Go Top Area -->


    </body>

{% endblock %}